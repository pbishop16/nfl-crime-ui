<div class="row">
  <div class="col s12">
    Filter by Team: {{input value=teamCode class="" placeholder="Three letter code: SEA"}}
    <button type="button" name="button" class="btn" {{action 'filterByTeam'}}>Filter</button> 
  </div>
</div>
<div class="row">
  <div class="col s6">
    <ul class="collection player-list">
      {{#each model as |player|}}
        {{#link-to 'players.player' player.id tagName="li" class="collection-item player-item"}}
          {{player.name}}
        {{/link-to}}
      {{/each}}
    </ul>
  </div>
  <div class="col s6">
    <div class="card blue-grey darken-1">
      {{outlet}}
    </div>
  </div>
</div>
