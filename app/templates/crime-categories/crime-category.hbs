<div class="row">
  <div class="col s6">
    <div class="card grey lighten-2">
      <div class="card-content black-text player-card">
        <span class="card-title">Category: {{model.category}}</span>
        <div class="">
          <p>Crime Count: {{count}}</p>
        </div>
        <hr>
        <h6>Crimes:</h6>
        <ul>
          {{#each model.crimes as |crime|}}
            <li>{{#link-to 'crimes.crime' crime.id}}{{crime.name}} | Encounter: {{crime.encounter}}{{/link-to}}</li>
          {{/each}}
        </ul>
      </div>

    </div>
  </div>
</div>
