<div class="row">
  <div class="col s6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text player-card">
        <span class="card-title">{{model.name}}</span>
        <div class="">
          <p>Team: {{model.lastArrestAssociatedTeam}}</p>
          <p>Team Name: {{model.lastArrestAssociatedTeamName}}</p>
          <p>Position: {{model.lastArrestAssociatedPosition}}</p>
          <p>Arrest Count: {{model.arrestCount}}</p>
        </div>
        <hr>
        <h6>Teams:</h6>
        <ul>
          {{#each model.teams as |team|}}
            <li>Team: {{team.teamName}}</li>
          {{/each}}
        </ul>
        <h6>Crimes:</h6>
        <ul class="">
          {{#each model.crimes as |crime|}}
            <li class="">Crime Category: {{crime.category}}</li>
          {{/each}}
        </ul>
      </div>

    </div>
  </div>
</div>
