<div class="row">
  <div class="col s6">
    <h4>All Players:</h4>
    <ul class="collection player-list">
      {{#each filteredPlayers as |player|}}
        {{#link-to 'players.player' player.id tagName="li" class="collection-item player-item"}}
          {{player.name}}
        {{/link-to}}
      {{/each}}
    </ul>
  </div>
  <div class="col s6">
    <h4>Top 10 Most Notorious Players:</h4>
    <ul class="collection player-list">
      {{#each model.topPlayers as |player|}}
        {{#link-to 'players.player' player.id tagName="li" class="collection-item player-item"}}
          {{player.name}} | Arrests: {{player.arrestCount}}
        {{/link-to}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="pagination col s6 center-align">
    <a class="btn-floating" {{action 'previousPage'}}><i class="material-icons">fast_rewind</i></a>
    <span> Page {{page}} of {{pagesTotal}}   </span>
    <a class="btn-floating" {{action 'nextPage'}}><i class="material-icons">fast_forward</i></a>
  </div>
</div>
